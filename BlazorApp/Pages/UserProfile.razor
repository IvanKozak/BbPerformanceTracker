@using ClientLibrary.Models

<div class="row">
    <div class="col-md-auto">
        <ShootingDrillSummary Drills="ShootingDrills" />
    </div>
    <div class="col-md-auto">
        <ThreeOnThreeMatchesSummary Matches="ToTMatches" />
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-auto">
            <h2>Shooting drill records</h2>
            <Virtualize Items="ShootingDrills" Context="drill">
                <ShootingDrillTab shootingDrill="drill" />
            </Virtualize>
        </div>
        <div class="col-auto">
            <h2>3x3 records</h2>
            <Virtualize Items="ToTMatches" Context="match">
                <ThreeOnThreeMatchTab match="match" />
            </Virtualize>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public List<ShootingDrill> ShootingDrills { get; set; } = new();
    [Parameter]
    public List<ThreeOnThreeMatch> ToTMatches { get; set; } = new();
}