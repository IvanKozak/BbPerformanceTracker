@using ClientLibrary.Models
<div class="container">
    <div class="row">
        <div class="col-auto">
            @DateOnly.FromDateTime(shootingDrill.Accomplished)
        </div>
        <div class="col">
            <div class="col">
                Postups
            </div>
            <div class="col">
                Midrange
            </div>
            <div class="col">
                Threes
            </div>
        </div>
        <div class="col">
            <div class="col">
                @Math.Round(shootingDrill.PostUps.Accuracy, 2)%
            </div>
            <div class="col">
                @Math.Round(shootingDrill.MidrangeShots.Accuracy, 2)%
            </div>
            <div class="col">
                @Math.Round(shootingDrill.ThreePointers.Accuracy, 2)%
            </div>
        </div>
        <div class="col">
            <div class="col">
                @shootingDrill.PostUps.Makes/@shootingDrill.PostUps.Attempts
            </div>
            <div class="col">
                @shootingDrill.MidrangeShots.Makes/@shootingDrill.MidrangeShots.Attempts
            </div>
            <div class="col">
                @shootingDrill.ThreePointers.Makes/@shootingDrill.ThreePointers.Attempts
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public ClientLibrary.Models.ShootingDrill? shootingDrill { get; set; }

}